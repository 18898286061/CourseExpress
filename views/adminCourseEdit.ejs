<%- include('header') %>

<style>
.answer {
  margin-left: 6px;
  padding-bottom: 2px;
}
</style>

<div class="ui grid">
  <div class="four wide column">

  </div>

  <div class="eight wide column">
    <!-- 不加multipart/form-data 上传文件会报错 -->
