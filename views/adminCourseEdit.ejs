        <span>答案3</span><input name="answerRadio2" type="radio" value="answer7"/><input class="answer" placeholder="答案3" type="text" name="answer7">
        <span>答案4</span><input name="answerRadio2" type="radio" value="answer8"/><input class="answer" placeholder="答案4" type="text" name="answer8">

        <label>问题3</label><input class="question" placeholder="问题3" type="text" name="question3">
        <span>答案1</span><input name="answerRadio3" type="radio" value="answer9"/><input class="answer" placeholder="答案1" type="text" name="answer9">
        <span>答案2</span><input name="answerRadio3" type="radio" value="answer10"/><input class="answer" placeholder="答案2" type="text" name="answer10">
        <span>答案3</span><input name="answerRadio3" type="radio" value="answer11"/><input class="answer" placeholder="答案3" type="text" name="answer11">
        <span>答案4</span><input name="answerRadio3" type="radio" value="answer12"/><input class="answer" placeholder="答案4" type="text" name="answer12">

        <label>问题4</label><input class="question" placeholder="问题4" type="text" name="question4">
        <span>答案1</span><input name="answerRadio4" type="radio" value="answer13"/><input class="answer" placeholder="答案1" type="text" name="answer13">
        <span>答案2</span><input name="answerRadio4" type="radio" value="answer14"/><input class="answer" placeholder="答案2" type="text" name="answer14">
        <span>答案3</span><input name="answerRadio4" type="radio" value="answer15"/><input class="answer" placeholder="答案3" type="text" name="answer15">
        <span>答案4</span><input name="answerRadio4" type="radio" value="answer16"/><input class="answer" placeholder="答案4" type="text" name="answer16">

      </div>

      <div class="field required">
        <label>价格</label>
        <input placeholder="价格" type="number" name="price" value="<%= course.price %>">
        </div>
      <div class="field required">
        <label>作者</label>
        <input type="text" name="author" value="<%= course.author %>" value="<%= course.author %>">
      </div>
      <div class="field required">
        <label>详情</label>
        <textarea name="description" rows="8"><%= course.description %></textarea>
      </div>
      <input type="submit" class="ui button" value="发布">
    </form>
  </div>
</div>

<script>
let questions = "<%= course.taskQuetion %>"
