<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
  </div>
  <div class="eight wide column">
    <form class="ui form segment"
          method="post"
          enctype="multipart/form-data">
      <div class="field required">
        <label>课程题目</label>
        <input placeholder="课程题目" type="text" name="courseName">
      </div>
      <div class="field required">
        <label>课程封面</label>
        <input type="file" name="cover">
      </div>
      <div class="field required">
        <label>课程视频</label>
        <input type="file" name="vedio1">
        <input type="file" name="vedio2">
        <input type="file" name="vedio3">
        <input type="file" name="vedio4">
        <input type="file" name="vedio5">
      </div>
      <div class="field required">
        <label>作者</label>
        <input placeholder="作者" type="text" name="author">
      </div>
      <div class="field required">
        <label>价格</label>
        <input placeholder="价格" type="number" name="price">
      </div>

      <div class="field required"><label>课堂作业</label>
        <span>问题1</span><input placeholder="问题1" type="text" name="question">
        <span>答案1</span><input placeholder="答案1" type="text" name="answer1"><input name="answerRadio" type="radio" value="answer1"/>
        <span>答案2</span><input placeholder="答案2" type="text" name="answer2"><input name="answerRadio" type="radio" value="answer2"/>
        <span>答案3</span><input placeholder="答案3" type="text" name="answer3"><input name="answerRadio" type="radio" value="answer3"/>
        <span>答案4</span><input placeholder="答案4" type="text" name="answer4"><input name="answerrRadio" type="radio" avalue="answer4"/>
      </div>

      <div class="field required">
        <label>描述</label>
        <textarea name="description" rows="5"></textarea>
      </div>
      <input type="submit" class="ui button fluid" value="发布课程">
    </form>
  </div>
</div>

<%- include('footer') %>
